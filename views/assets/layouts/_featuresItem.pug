- var features = [{'name': "Transfer",'icon': "transfer.svg", 'color': "bg-[#E3FB82]", 'href': "/features/transfer"},{'name': "Recharge",'icon': "recharge.svg", 'color': "bg-[#FFBB33]", 'href': "/features/recharge"}, {'name': "Withdraw", 'icon': "withdraw.svg", 'color': "bg-[#81FFD1]", 'href': "/features/withdraw"}, {'name': "Mobile Card", 'icon': "mobilecard.svg", 'color': "bg-[#FD8BFF]", 'href': "/features/buy-mobile-card"}, {'name': "History", 'icon': "history.svg", 'color': "bg-[#F59860]", 'href': "/features/history"}, {'name': "Change Password", 'icon': "changepassword.svg", 'color': "bg-[#D9D9D9]", 'href': "/features/change-password"}, {'name': "Add Info", 'icon': "info.svg", 'color': "bg-[#8692FF]", 'href': "/features/add-info"}]
body 
    each item in features 
        a(href= item.href, class="flex justify-center items-center") 
            div(class= item.color + " w-[150px] h-[150px] md:w-[250px] md:h-[250px] flex flex-col justify-center items-center rounded-[15px]")
                p(class="text-[20px] md:text-[30px] font-semibold text-center text-sourcepro")= item.name
                div(class="w-[40px] h-[40px] md:w-[80px] md:h-[80px]")
                    img(src="icons/" + item.icon, alt="", class="w-full h-full")
    