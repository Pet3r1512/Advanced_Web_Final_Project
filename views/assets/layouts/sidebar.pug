doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.css")
        title Document
    body 
//- Remove HTML tag when import to production
body(class="w-[300px] h-screen")
    div(class="container h-full flex flex-col p-[20px] gap-y-[50px] relative")
        div(class="flex justify-between items-center") 
            h1(class="text-2xl font-bold") Menu
            span(class="h-[40px] w-[40px]")
                include ../../../public/icons/close.svg
        div(class="menu")
            ul(class="flex flex-col gap-y-6 font-semibold")
                li
                    a(href="/", class="hover:text-indigo-600 duration-150 ease-linear transition text-xl") Home
                li
                    a(href="/about_us", class="hover:text-indigo-600 duration-150 ease-linear transition text-xl") About Us
                li
                    a(href="/features", class="hover:text-indigo-600 duration-150 ease-linear transition text-xl") Features
                li
                    a(href="/profile", class="hover:text-indigo-600 duration-150 ease-linear transition text-xl") Profile
        button(class="px-[15px] py-[5px] bg-indigo-600 text-white w-fit rounded-xl font-semibold") 
            a(href="/account/signin") Sign In
        img(src="/images/main_logo.png", alt="PayWind", class="w-[150px] mx-auto absolute bottom-[50px]")
        //- Use Figma URL for logo instead of path