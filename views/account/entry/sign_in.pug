doctype html
html(lang="en")
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel="icon" href="/images/Logomark.png")
      meta(http-equiv="Content-Security-Policy" content="upgrade-insecure-requests")
      title PayWind | Sign In
      link(rel="stylesheet", href="/css/style.min.css", type="text/css")
      link(rel='preconnect' href='https://fonts.googleapis.com')
      link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
      link(href='https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap' rel='stylesheet')
      link(href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet")
      block script
         script
            include ../../assets/javascripts/show_pass.js
            include ../../assets/javascripts/toggleMode.js

   body(class="w-screen h-screen bg-[#E1E5E8] flex flex-col", id="body")
      include ../../assets/layouts/_logo.pug

      div(class="flex flex-col items-center flex-1")
         form(method='post', id="form", class="flex flex-col w-3/4 md:w-1/3 lg:w-1/4 md:px-0 md:gap-4 h-fit border border-slate-300 p-8 py-12 rounded-[1.5rem] gap-6 bg-white justify-center items-center shadow-lg")
            div(class="flex flex-col md:w-2/3")
               p(class="font-semibold text-[30px] md:mb-12 mb-10 text-center font-kanit") Sign In
               div(class="flex flex-col gap-y-6 font-sourcepro")
                  input(type="text", placeholder="Email" name="email" id="email" class="border border-slate-400 p-2 rounded-md pl-4")
                  div(class="relative")
                     input(type="password", placeholder="Password", name="password" class="border border-slate-400 pl-4 p-2 rounded-md w-full", id="pass_input" required)
                     span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                        include ../../../public/icons/eye-outline.svg
                        include ../../../public/icons/eye-off-outline.svg
                  input(type="submit" id="submit" value="Sign In" class="border h-fit px-4 py-2 rounded-md my-2 cursor-pointer bg-blue-500 text-white ease-in-out delay-100 hover:bg-blue-700 hover:-translate-y-1.5 hover:scale-105 duration-300 border-[#282828]")
               p(class="text-center py-4") -- Or sign in with --
                  div(class="flex justify-center items-center gap-6")
                     div(class=" px-4 py-2 rounded-lg border border-slate-400 w-2/3 text-center font-bold hover:bg-blue-500 hover:cursor-pointer duration-300 delay-75 hover:text-white", id="btn_gg")
                           a(href="#") Google
                     div(class="px-4 py-2 rounded-lg border border-slate-400 w-2/3 text-center font-bold hover:bg-blue-500 hover:cursor-pointer duration-300 delay-75 hover:text-white", id="btn_fb")
                           a(href="#") Facebook
               p(class="mt-4 text-center") Don't have account?
                  a(href="signup", class="md:ml-2 underline text-blue-500 hover:text-blue-300 block md:inline") Sign Up
      footer(class="bg-blue-500 h-fit border border-t-[1px] border-blue-500 w-full fixed bottom-0 flex justify-between items-center")
         p(class="p-2 text-white text-sm") &#169 2022 PayWind.All Rights Reserved | Design by SVTDTU

         label(class="inline-flex items-center cursor-pointer")
            input(type="checkbox", name="toggle", id="toggle", class="sr-only peer", onclick="toggleMode()" checked)
            div(class="w-8 h-4 rounded-full dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-gray-700 peer-checked:after:bg-gray-600 after:absolute after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all dark:border-gray-600 peer-checked:bg-white")