doctype html
html(lang="en")
   head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel="icon" href="/images/Logomark.png")
      meta(http-equiv="Content-Security-Policy" content="upgrade-insecure-requests")
      title PayWind | Sign In
      link(rel="stylesheet", href="/css/style.css", type="text/css")
      link(rel='preconnect' href='https://fonts.googleapis.com')
      link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
      link(href='https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap' rel='stylesheet')
      link(href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet")
      block script
         script
            include ../../assets/javascripts/show_pass.js

   body(class="flex flex-col w-screen h-screen items-center bg-[#E1E5E8]")
      include ../../assets/layouts/_logo.pug

      form(method='post', action="/profile/information", class="flex flex-col w-3/4 md:w-1/3 lg:w-1/4 md:px-0 md:gap-4 h-fit border border-slate-300 p-8 py-12 rounded-[1.5rem] gap-6 bg-white justify-center items-center")
         div(class="flex flex-col md:w-2/3")
            p(class="font-semibold text-[30px] md:mb-12 mb-10 text-center font-kanit") Sign In
            div(class="flex flex-col gap-y-6 font-sourcepro")
               input(type="text", placeholder="Username" name="username" class="border border-slate-400 p-2 rounded-md")
               div(class="relative")
                  input(type="password", placeholder="Password", name="password", class="border border-slate-400 p-2 rounded-md w-full", id="pass_input" required)
                  span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                     include ../../../public/icons/eye-outline.svg
                     include ../../../public/icons/eye-off-outline.svg
               input(type="submit", value="Sign In" class="border h-fit px-4 py-2 rounded-md my-2 cursor-pointer bg-indigo-500 text-white ease-in-out delay-100 hover:bg-indigo-700 hover:-translate-y-1.5 hover:scale-105 duration-300")
            p(class="text-center py-4") -- Or sign in with --
                div(class="flex justify-center items-center gap-6")
                    div(class=" px-4 py-2 rounded-lg border border-slate-400 w-2/3 text-center font-bold hover:bg-indigo-100 hover:cursor-pointer duration-300 delay-75")
                        a(href="#") Google
                    div(class="px-4 py-2 rounded-lg border border-slate-400 w-2/3 text-center font-bold hover:bg-indigo-100 hover:cursor-pointer duration-300 delay-75")
                        a(href="#") Facebook
            p(class="mt-4 text-center") Don't have account?
               a(href="signup", class="md:ml-2 underline text-indigo-500 hover:text-indigo-300 block md:inline") Sign Up