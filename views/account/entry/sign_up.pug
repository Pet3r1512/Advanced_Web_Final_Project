doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="icon" href="/images/Logomark.png")
        link(rel="stylesheet", href="/css/style.css")
        title PayWind | Create New Account
        block script
         script
            include ../../assets/javascripts/show_pass.js

    body(class="w-screen, h-screen flex justify-center items-center")
        form(method='post', action="/profile/information", class="flex flex-col md:flex-row w-3/4 lg:w-2/3 h-fit border p-6 rounded-lg gap-6")
            div(class="flex justify-start items-start md:w-1/3 text-white px-4 py-5 rounded-2xl")
                div(class="w-full h-full md:border-4 rounded-2xl border-indigo-500 border-0 flex items-center justify-center")
                    img(src="/images/main_logo.png", alt="PayWind", class="")
            div(class="flex flex-col md:w-2/3")
                p(class="font-semibold text-[30px] md:mb-16 mb-8") Create New Account
                div(class="flex flex-col gap-y-6")
                    input(type="email", placeholder="Email", class="border p-2 rounded-md")
                    input(type="text", placeholder="Username", class="border p-2 rounded-md")
                    div(class="relative")
                        input(type="password", placeholder="Password", name="password", class="border p-2 rounded-md w-full", id="pass_input" required)
                        span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                            include ../../../public/icons/eye-outline.svg
                            include ../../../public/icons/eye-off-outline.svg
                    div(class="relative")
                        input(type="password", placeholder="Confirm Password", name="confirm_password", class="border p-2 rounded-md w-full", id="confirm_pass" required)
                        span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                            include ../../../public/icons/eye-outline.svg
                            include ../../../public/icons/eye-off-outline.svg
                    button(onClick="check_create_account()", value="Create Account" class="border h-fit px-4 py-2 rounded-md my-2 cursor-pointer bg-indigo-500 text-white ease-in-out delay-100 hover:bg-indigo-700 hover:-translate-y-1.5 hover:scale-105 duration-300", id="submit") Create Account
                p Alreay have an account?
                    a(href="signin", class="ml-2 underline text-indigo-500 hover:text-indigo-300") Sign In
