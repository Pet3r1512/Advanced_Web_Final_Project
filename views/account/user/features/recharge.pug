doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.min.css")
        link(rel="icon" href="/images/Logomark.png")
        title PayWind | Recharge
        style
            .text-green-600
                color: #00C851
            .text-red-600
                color: #EB001B
            .text-yellow
                color: #ffb703
        block script
            script
                include ../../../assets/javascripts/rechargeValidation.js

    body
        div(class="container max-w-7xl mx-auto px-4 sm:px-2 md:px-6 flex flex-col font-nunito_sans")
            div
                include ../../../assets/layouts/header.pug
                +header(username)
            div(class="flex flex-col-reverse md:items-center lg:items-start lg:flex-row justify-between my-8 md:mt-16")
                form(method="POST" id="rechargeForm" class="profile-detail font-sourcepro w-full md:w-[80%] lg:w-[40%]")
                    h1(class="font-semibold text-[25px] md:text-[34px] relative md:left-[-50px] lg:left-0") Recharge Details
                    div(class="flex flex-col gap-3 mt-6 w-full")
                        label(for="cardNumber" class="form-label inline-block mb-2 text-gray-700 font-semibold") Credit Card Number
                        input(type="text" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" placeholder="Enter credit card number" maxlength="6" id="cardNumber" oninput ="rechargeValidate()" name="cardNumber" required)
                    div(class="flex flex-col gap-3 mt-6 w-full")
                        label(for="expiredDay" class="form-label inline-block mb-2 text-gray-700 font-semibold") Expired Day
                        input(type="date" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" placeholder="Enter Credit Card Expired Day" required id="expiredDay" name="expiredDate")
                    div(class="flex flex-col gap-3 mt-6 w-full")
                        label(for="cvv" class="form-label inline-block mb-2 text-gray-700 font-semibold") CVV Code
                        input(type="text" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" placeholder="Enter Credit Card CVV" maxlength="3" required id="cvv" name="cvv")
                    div(class="flex flex-col gap-3 mt-6 w-full")
                        label(for="currency-field" class="form-label inline-block mb-2 text-gray-700 font-semibold") Amount
                        div(class="relative")
                            input(type="text" class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" name="currency_field" placeholder="Enter amount of money" id="currency-field" data-type="currency" oninput="formatMoney()" required)
                            span(class="absolute right-2 top-1/2 translate-y-[-50%] font-semibold") VND

                    div(class="w-full flex justify-center  mt-10")
                        button(onclick="rechargeValidate()" type="submit" class="w-fit px-3 py-2 bg-blue-500 hover:bg-blue-600 duration-150 transition hover:scale-110 text-white font-semibold rounded-lg" id="confirmBtn") Transaction Confirm

                div(class="flex flex-col items-center mb-4 md:mb-8 gap-y-6")
                    include ../../../assets/layouts/_creditCard.pug
                    +creditCard(info, user.fullname, exp)
                    p(class="w-[500px] text-center font-semibold lg:mt-10 text-[18px]" id="noticeLabel")