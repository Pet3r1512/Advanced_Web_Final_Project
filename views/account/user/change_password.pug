doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/style.min.css")
        link(rel="icon" href="/images/Logomark.png")
        title PayWind | Change Password
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap' rel='stylesheet')
        link(href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet")
        block script
            script
                include ../../assets/javascripts/show_pass.js
                include ../../assets/javascripts/emailValidation.js
                include ../../assets/javascripts/passValidation.js
                include ../../assets/javascripts/passRegEx.js
                include ../../assets/javascripts/toggleMode.js

    body(class="w-screen h-screen bg-[#E1E5E8] flex flex-col", id="body") 
        div(class="flex flex-col items-center flex-1")
            include ../../assets/layouts/_logo.pug
            form(method='post', id="form", class="flex flex-col w-3/4 md:w-1/3 lg:w-1/4 md:px-0 md:gap-4 h-fit border border-slate-300 p-8 py-12 rounded-[1.5rem] gap-6 bg-white justify-center items-center shadow-lg")
                div(class="flex flex-col md:w-2/3")
                    p(class="font-semibold text-[30px] md:mb-12 mb-10 text-center font-kanit") Change Password
                    div(class="flex flex-col gap-y-6 font-sourcepro")
                        input(type="password", placeholder="Current Password", name="current_password" class="border border-slate-400 pl-4 p-2 rounded-md w-full", id="current_password_input" required)
                        div(class="relative")
                            input(type="password", placeholder="New Password", name="new_password" class="border border-slate-400 pl-4 p-2 rounded-md w-full", id="new_pass_input" required)
                            span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                                include ../../../public/icons/eye-outline.svg
                                include ../../../public/icons/eye-off-outline.svg
                        div(class="relative")
                            input(type="password", placeholder="Confirm Password", name="confirm_password" class="border border-slate-400 pl-4 p-2 rounded-md w-full", id="confirm_new_pass_input" required)
                            span(type="icon" class="absolute right-2 top-1/2 translate-y-[-50%] hover:cursor-pointer", id="passIcon", onclick="show_pass()")
                                include ../../../public/icons/eye-outline.svg
                                include ../../../public/icons/eye-off-outline.svg
                        input(type="submit" id="submit" value="Change Password" class="border h-fit px-4 py-2 rounded-md my-2 cursor-pointer bg-blue-500 text-white ease-in-out delay-100 hover:bg-blue-700 hover:-translate-y-1.5 hover:scale-105 duration-300 border-[#282828]")