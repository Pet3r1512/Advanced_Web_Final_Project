doctype html
html(lang="en")
   head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
      title PayWind | Admin
      link(rel="icon" href="/images/Logomark.png")
      link(href="/css/style.min.css", rel="stylesheet")
      script.
         setTimeout(removeMessage, 3000);
         function removeMessage(){
            document.getElementById("msg").remove()
         }

   body
      div(class="container min-h-screen max-w-7xl mx-auto px-4 sm:px-2 md:px-6 flex flex-col font-nunito_sans relative")
         include ../../assets/layouts/header.pug
         +header(username)
         div(class="flex mt-6 gap-4")
            a(href="/admin/active" class="underline text-blue-400") Activated User

            a(href="/admin/inactive" class="underline text-blue-400") Pending User
      
         if msg
            p(class="bg-green-500 text-white w-fit px-4 py-2 rounded-lg text-center font-semibold absolute bottom-12 left-4" id="msg") #{msg}

      div(class="absolute bottom-0 w-full")
         include ../../assets/layouts/footer.pug
